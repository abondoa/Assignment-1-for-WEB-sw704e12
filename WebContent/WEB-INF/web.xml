<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>WEHelloWorld</display-name>
	<servlet>
		<description>
		</description>
		<display-name>FileCounter</display-name>
		<servlet-name>FileCounter</servlet-name>
		<servlet-class>helloWorld.FileCounter</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>Hello</display-name>
		<servlet-name>Hello</servlet-name>
		<servlet-class>helloWorld.controllers.Hello</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FileCounter</servlet-name>
		<url-pattern>/FileCounter</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Hello</servlet-name>
		<url-pattern>/Hello</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<description></description>
		<display-name>HelloXSLT</display-name>
		<servlet-name>HelloXSLT</servlet-name>
		<servlet-class>helloWorld.controllers.HelloXSLT</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>Transformer</display-name>
		<servlet-name>Transformer</servlet-name>
		<servlet-class>helloWorld.controllers.Transformer</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>HelloXSLT</servlet-name>
		<url-pattern>/HelloXSLT</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Transformer</servlet-name>
		<url-pattern>/Transformer</url-pattern>
	</servlet-mapping>
</web-app>
